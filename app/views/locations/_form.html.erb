<% if location.errors.any? %>
    <div class="alert alert-block">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <div id="error_explanation">
            <h4><%= pluralize(location.errors.count, "error") %> prohibited this post from being saved:</h4>
         
            <ul>
            <% location.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    </div>
<% end %>
<%= form_for(location, :url => {action: action} , :html => {:class => 'form-horizontal'} ) do |f| %>    
    <fieldset>                
        <div class="control-group">
            <%= f.label "Location Name",:class => "control-label" %>
            <div class="controls">
                <%= f.text_field :name, :class =>"input-xlarge", :required => "required" %>
            </div>
        </div>
        <div class="control-group">
            <%= f.label "Location Code",:class => "control-label" %>
            <div class="controls">
                <%= f.text_field :code, :class =>"input-xlarge", :required => "required" %>
            </div>
        </div>
        <div class="control-group">
            <%= f.label "Latitude",:class => "control-label" %>
            <div class="controls">
                <%= f.text_field :lat, :class =>"input-xlarge", :required => "required" %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label "Longtitude",:class => "control-label" %>
            <div class="controls">
                <%= f.text_field :lng, :class =>"input-xlarge", :required => "required" %>
            </div>
        </div>
        
        <!-- Submit -->
        <div class="control-group">
            <div class="controls">
                <button class="btn btn-success">Save</button>
                <%=link_to "Cancel", locations_path, :class => "btn" %>
            </div>
        </div>
    </fieldset>
<% end %>