    <div class="btn-toolbar">
    	<div class="input-append">
        	<input type="text" placeholder="Search here ..." class="span2 search-query" name="q">
        </div>
    	<%= link_to "Add New Reporter", new_reporter_path, :method => :get, :class => 'btn btn-primary to-right' %>	    
    </div>
    <div class="well">
    	<!--<table class="table table-bordered table-striped">-->
	    <table class="table">
		    <thead>
			    <tr>
				    <th>First Name</th>
				    <th>Last Name</th>
				    <th>Gender</th>
				    <th>Cast</th>
				    <th>Ethnicity</th>
				    <th>Phone Number</th>
				    <th style="width: 36px;"></th>
			    </tr>
		    </thead>
		    <% @reporters.each do |reporter| %>
			    <tbody>
				    <tr>
					    <td><%= reporter.first_name %></td>
					    <td><%= reporter.last_name %></td>
					    <td><%= reporter.sex %></td>
					    <td><%= reporter.cast %></td>
					    <td><%= reporter.ethnicity %></td>
					    <td><%= reporter.phone_number %></td>
					    <td>
					    <%= link_to raw("<i class='icon-pencil'></i>"), edit_reporter_path(reporter), :method => :get %>
					    <%= link_to raw("<i class='icon-remove'></i>"), reporter_path(reporter), :method => :delete, :confirm => "Are you sure to delete this location?" %>
					    </td>
				    </tr>
			    </tbody>
			<% end %>
	    </table>
    </div>
    <%= will_paginate @locations, renderer: BootstrapPagination::Rails %>
    <div class="modal small hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	    <div class="modal-header">
		    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		    <h3 id="myModalLabel">Delete Confirmation</h3>
		</div>
		<div class="modal-body">
		    <p class="error-text">Are you sure you want to delete the user?</p>
		</div>
		<div class="modal-footer">
		    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
		    <button class="btn btn-danger" data-dismiss="modal">Delete</button>
	    </div>
    </div>