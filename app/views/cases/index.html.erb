<div class="btn-toolbar">
  <%= link_to "Add New Case", new_case_path, :method => :get, :class => 'btn btn-primary to-right' %>      
</div>
<div>
  <!--<table class="table table-bordered table-striped">-->
  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>Message</th>
        <th>Conflict Type</th>
        <th>Conflict Intensity</th>
        <th>Conflict State</th>
        <th>Location</th>
        <th style="width: 36px;"></th>
      </tr>
    </thead>
    <tbody>
    <% @cases.each do |l| %>          
      <tr>
        <td><%= l.message %></td>
        <td><%= l.conflict_type_id %></td>
        <td><%= l.conflict_intensity_id %></td>
        <td><%= l.conflict_state_id %></td>
        <td>
        <%= link_to raw("<i class='icon-pencil'></i>"), edit_case_path(l), :method => :get %>
        <%= link_to raw("<i class='icon-remove'></i>"), case_path(l), :method => :delete, :confirm => "Are you sure to delete case?" %>
        </td>
      </tr>
  <% end %>
  </tbody>
  </table>
</div>
<%= will_paginate @cases, renderer: BootstrapPagination::Rails %>
<div class="modal small hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Delete Confirmation</h3>
</div>
<div class="modal-body">
    <p class="error-text">Are you sure you want to delete the user?</p>
</div>
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <button class="btn btn-danger" data-dismiss="modal">Delete</button>
  </div>
</div>
