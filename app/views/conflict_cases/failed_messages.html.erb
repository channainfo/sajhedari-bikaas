<div class="row-fluid">
    <div id="legend">                    
        <legend class="">Failed Messages</legend>
    </div>
</div>
<!--<table class="table table-bordered table-striped">-->
<table class="table table-condensed table-hover" id="mytable_failed_messages">
    <thead>
	    <tr>
		    <th>From</th>
		    <th>To</th>
		    <th>Original message</th>
		    <th>System reply</th>
		    <th>Date sent</th>
		    <th style="width: 36px;"></th>
	    </tr>
    </thead>
    <tbody>
	<% @messages.each do |m| %>	     
	    <tr>
	    	<td><%= m.from %></td>
	    	<td><%= m.to %></td>
	    	<td><%= m.body %></td>
	    	<td><%= m.reply %></td>
	    	<td><%= m.created_at.in_time_zone(TimeZone).strftime("%m-%d-%Y %H:%M:%S") %></td>
	    	<td>
	    	<%= link_to raw("<i class='icon-remove'></i>"), message_path(m), :method => :delete, :confirm => "Are you sure to delete this message ?" %>
	    	</td>
	   	</tr>
	<% end %>
	</tbody>
</table>
<div>
	<span class="badge" style="padding:5px;margin-right:5px;">Display record : <%= @messages.size %> / <%= @messages.total_entries %>
	</span>
</div>
<%= will_paginate @messages, :param_name => 'reporter_page', renderer: BootstrapPagination::Rails %>
	    